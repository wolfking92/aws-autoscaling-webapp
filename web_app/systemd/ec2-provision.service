[Unit]
Description=Gunicorn Flask Web App
After=network.target

[Service]
User=ec2-user
WorkingDirectory=/home/ec2-user/web_app
ExecStart=/home/ec2-user/web_app/venv/bin/gunicorn app:app --bind 0.0.0.0:5000 --workers 2
Restart=always
RestartSec=5
Environment="PATH=/home/ec2-user/web_app/venv/bin"

[Install]
WantedBy=multi-user.target
